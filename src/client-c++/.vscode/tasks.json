{
        // See https://go.microsoft.com/fwlink/?LinkId=733558
        // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "Ninja Build",
                        "type": "shell",
                        "command": "ninja",
                        "args": [
                                "-C",
                                "build"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "presentation": {
                                "reveal": "always"
                        },
                        "problemMatcher": "$gcc"
                }
        ]
}